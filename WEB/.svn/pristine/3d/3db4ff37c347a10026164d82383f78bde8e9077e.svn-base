@model VMS.Web.Models.DOMaster
@Scripts.Render("~/Mousetrap")
@Styles.Render("~/DataTablesCS")
@Scripts.Render("~/DataTablesJS")

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<script type="text/javascript" src=@Url.Content("~/Scripts/jquery.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/jquery.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/jquery.dataTables.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/dataTables.bootstrap4.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/dataTables.responsive.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/responsive.bootstrap4.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/popper.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/sweetalert.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/moment.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/moment.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/tempusdominus-bootstrap-4.min.js")></script>
@Styles.Render("~/Content/bootstrap.min.css")
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/FA/css/font-awesome.min.css")
@Styles.Render("~/Content/tempusdominus-bootstrap-4.min.css")
@Styles.Render("~/Content/dataTables.bootstrap4.min.css")
@Styles.Render("~/Content/jquery.dataTables.min.css")

<style>
    .div-1 {
        background-color: #bacad2;
    }

    .div-0 {
        background-color: #C0C0C0;
    }
</style>
<div class="form-horizontal">
    <form id="myForm1">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SENo)
        @Html.HiddenFor(model => model.MasterId)
        @Html.HiddenFor(model => model.TimeOut)
        @Html.HiddenFor(model => model.SecurityCheck)
        @Html.HiddenFor(model => model.SecurityPic)
        @Html.HiddenFor(model => model.ReceivedDate)
        @Html.HiddenFor(model => model.ManagerApprove)
        <div class="div-0" style="margin:0px">
            <h7 style="margin-left:10px" onclick="backtolist();"><b> < Delivery Order</b></h7>
        </div>
        <div class="div-1" style="margin:0px">
            <h7 style="margin-left:10px"><b>Requestor</b></h7>
        </div>
        <div style="margin:10px">
            <table>
                <td>
                    <dt>
                        <a>DO Number </a>
                    </dt>
                    <dt>
                        <a>Departement </a>
                    </dt>
                    <dt>
                        <a>Requestor </a>
                    </dt>
                    <dt>
                        <a>Address </a>
                    </dt>
                    <dt>
                        <a>Deliver via </a>
                    </dt>
                    <dt>
                        <a>Status </a>
                    </dt>
                </td>
                <td>
                    <dt>
                        : @Html.DisplayFor(model => model.DONo)
                    </dt>
                    <dt>
                        : @Html.DisplayFor(model => model.UseDep)
                    </dt>
                    <dt>
                        : @Html.DisplayFor(model => model.UseID)
                    </dt>
                    <dt>
                        : @Html.DisplayFor(model => model.Address)
                    </dt>
                    <dt>
                        : @Html.DisplayFor(model => model.DelVia)
                    </dt>
                    <dt>
                        : @Html.DisplayFor(model => model.Status)
                    </dt>
                </td>
            </table>
        </div>
        <div class="div-1" style="margin:0px">
            <h7 style="margin-left:10px"><b>Delivery</b></h7>
        </div>
        <div style="margin:10px">
            <table>
                <td>
                    <dt>
                        <a>Address &nbsp; &nbsp; &nbsp; &nbsp; </a>
                    </dt>
                </td>
                <td>
                    <dt>
                        : @Html.DisplayFor(model => model.Address)
                    </dt>
                </td>
            </table>
        </div>
        <div class="div-1" style="margin:0px">
            <h7 style="margin-left:10px"><b>Product/Equipment Carried</b></h7>
        </div>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Remark</th>
                    <th>Is Returned</th>
                    <th>Returned By</th>
                    <th>Returned Date</th>
                    <th>Photo</th>
                </tr>
                @foreach (var item in Model.DODetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsReturned)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnedDate)
                        </td>
                        <td>
                            <img style="height:70px" src="@Url.Content("~/uploads/DOItem/" + item.Photo + "")" alt="IMAGES" />
                            @*@Html.DisplayFor(modelItem => item.Photo)*@
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="div-1" style="margin:0px">
            <h7 style="margin-left:10px"><b>Driver Details</b></h7>
        </div>
        <div class="form-group">
            <div style="margin:10px">
                <table>
                    <td>
                        <dt>
                            <a>Driver Name </a>
                        </dt>
                        <dt>
                            <a>Vehicel No </a>
                        </dt>
                        <dt>
                            <a>Time Out </a>
                        </dt>
                        <dt>
                            <a>Container No </a>
                        </dt>
                        <dt>
                            <a>Seal No </a>
                        </dt>
                    </td>
                    <td>
                        <dt>
                            : @Html.DisplayFor(model => model.DriName)
                        </dt>
                        <dt>
                            : @Html.DisplayFor(model => model.VechNo)
                        </dt>
                        <dt>
                            : @Html.DisplayFor(model => model.TimeOut)
                        </dt>
                        <dt>
                            : @Html.DisplayFor(model => model.ContainerNo)
                        </dt>
                        <dt>
                            : @Html.DisplayFor(model => model.SealNo)
                        </dt>
                    </td>
                </table>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-12">
                <a href="#" id="btnComplete" onclick="CompleteDelivery();" class="btn btn-sm btn-success btn-block">
                    <span>
                        Complete Delivery
                    </span>
                </a>
            </div>
            <br />
            <div class="col-md-12">
                <a href="#" id="btnCancel" onclick="CancelDelivery();" class="btn btn-sm btn-danger btn-block">
                    <span>
                        Cancel Delivery
                    </span>
                </a>
            </div>
        </div>
        <div id="completeDO" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h7 class="modal-title">Complete Delivery</h7>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.Label("Receiver_", "Receiver :")
                                        @Html.TextBoxFor(model => model.ReceiverName, new { @class = "form-control", id = "RecName", name = "RecName" })
                                    </div>
                                </div>
                                <div class="form-group" id="myDIV">
                                    <div class="col-md-12">
                                        @Html.Label("ReceivedPic_", "Photo :")
                                        @Html.TextBoxFor(model => model.ReceivedPic, new { @class = "form-control", id = "RecPic", name = "RecPic" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="file" class="custom-file-input" id="Files">
                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="CompelteBtn" type="button" class="btn btn-primary">Complete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="cancelDO" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h7 class="modal-title">Are you sure going to cancel ?</h7>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-footer">
                        <button id="CancelBtnYes" type="button" class="btn btn-primary">Yes</button>
                        <button id="CancelBtnNo" type="button" class="btn btn-primary">No</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        var x = document.getElementById("myDIV");
        x.style.display = "none";
    })
    function backtolist()
    {
        var url = '@Url.Action("MobileDriver", "DeliveryOrder")';
        window.location.href = url;
    }
    function CompleteDelivery() {
        $("#completeDO").modal();
    }
    function CancelDelivery() {
        $("#cancelDO").modal();
    }
    function Upload() {
        var fileUpload = $("#Files").get(0);
        var files = fileUpload.files;
        // Create FormData object
        var fileData = new FormData();
        // Looping over all files and add it to FormData object
        for (var i = 0; i < files.length; i++) {
            fileData.append(files[i].name, files[i]);
        }
        $.ajax({
            url: '@Url.Action("UploadFiles", "DeliveryOrder")',
            type: "POST",
            contentType: false, // Not to set any content headerW
            processData: false, // Not to process data
            data: fileData,
            async: false,
            success: function (result) {
                if (result != "") {
                    $("#RecPic").val(result);
                }
            }
        });
    }
</script>
<script>
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        Upload();
    });
</script>
<script>
    $("#CompelteBtn").click(function () {
        if ($("#RecPic").val() == "" || $("#RecName").val() == "")
        {
            alert("ERROR")
        }
        else
        {
            var myformdata = $("#myForm1").serialize();
            $.ajax({
                type: "POST",
                url: '@Url.Action("DriverReceived", "DeliveryOrder")',
                data: myformdata,
                success: function () {
                    alert("UPDATING SUCCESS")
                    var url = '@Url.Action("MobileDriver", "DeliveryOrder")';
                    window.location.href = url;
                },
                error: function () {
                    alert("UPDATING SUCCESS")
                    var url = '@Url.Action("MobileDriver", "DeliveryOrder")';
                    window.location.href = url;
                }
            })
        }
    })
</script>
<script>
    $("#CancelBtnYes").click(function () {
            var myformdata = $("#myForm1").serialize();
            $.ajax({
                type: "POST",
                url: '@Url.Action("DriverCancel", "DeliveryOrder")',
                data: myformdata,
                success: function () {
                    alert("DO CANCELED")
                    var url = '@Url.Action("MobileDriver", "DeliveryOrder")';
                    window.location.href = url;
                },
                error: function () {
                    alert("DO CANCELED")
                    var url = '@Url.Action("MobileDriver", "DeliveryOrder")';
                    window.location.href = url;
                }
            })
    })
</script>
