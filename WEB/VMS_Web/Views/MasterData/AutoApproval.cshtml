                    else {
                        toastr.error("Upload Master data " + j.Msg + ", Please contact IT")
                    }
                    $("#uploadMasterData").attr("disabled", false);
                },
                error: function (xhr, error, text) {
                    toastr.error("Failed Query upload, Please contact IT" + xhr)
                    $("#uploadMasterData").attr("disabled", false);
                }
            });
