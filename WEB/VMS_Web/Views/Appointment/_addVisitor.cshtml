    function FuncChecked()
    {
        @*if (document.getElementById("chkUnknown").checked = true)
        {
            $("#@Html.IdFor(m => m.Visitor.FullName)").val($("#chkUnknown").val());
            $("#@Html.IdFor(m => m.Visitor.FullName)").prop('disabled', true);
